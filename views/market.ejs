      <div class="jumbotron"><h4 class="display-4">Select appropriate tags to filter results</h4>
        <div class="lead">
        <form action="/filter" method="POST">
          <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="heavy_use" value="heavy_use">
              <label class="form-check-label" for="heavy_use">heavy use</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="moderate_use" value="moderate_use">
              <label class="form-check-label" for="moderate_use">moderate use</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="lightly_used" value="lightly_used">
              <label class="form-check-label" for="lightly_used">lightly used</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="new" value="new">
              <label class="form-check-label" for="new">New</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="books" value="books">
              <label class="form-check-label" for="books">Book</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="bicycle" value="bicycle">
              <label class="form-check-label" for="bicycle">Bicycle</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="lab_uniform" value="lab_uniform">
              <label class="form-check-label" for="lab_uniform">lab uniform</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="stationary" value="stationary">
              <label class="form-check-label" for="stationary">Stationary</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="tags" id="utilities" value="utilities">
              <label class="form-check-label" for="utilities">Utilities</label>

            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-filter" ></i>Apply filter</button>
        </form>

