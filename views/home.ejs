</div>
    <div class="container p-5">
        <div class="card">
            <div class="card-body">
                    <h1>Hello <%=name%></h1> 
                    
                    
            </div>
        

        <div>
          <div>
            <div>
                  <div class="container">
    
         <% if (prods.length > 0) { %>
         <div class="alert alert-info" role="alert"><h3>You currently have <%=prods.length%> items listed in the market!!<h3></div>
                   
                      
                        <% for (var i=0;i<(Math.ceil(prods.length/4));i++) { %>
                         <div class="row" >
                        
                          <% if(((i+1)*4)<=prods.length){for(var j=i*4;j<((i+1)*4);j++){ %>

                            <div class="col-3">
                                <div class="card">
                                    
                                    <img src="<%= prods[j].image_url %>" alt="<%= prods[j].name %>" class="card-img-top">
                                


                                    <div class="card-body">
                                    <h5 class="card-title">
                                        <%= prods[j].name %>
                                    </h5>
                                    <p class="card-text">Cost: <%= prods[j].price %></p>
                                    <form action="/product_details" method="POST" >
                                        <button class="btn btn-info" type="submit" name="id" value="<%=prods[j].id%>">Details</button>
                                    </form>
                               
                                
                                    
                                        

                                   </div>
                                    
                                </div>
                                    
                                   
                                    
                                </div>
                                
                           
                            <% }} else {for(var j=(i*4); j<(prods.length);j++){ %>
                            

                            <div class="col-3">
                                <div class="card">
                                    
                                    <img src="<%= prods[j].image_url %>" alt="<%= prods[j].title %>" class="card-img-top">
                                


                                    <div class="card-body">
                                    <h5 class="card-title">
                                        <%= prods[j].name %>
                                    </h5>
                                    <p class="card-text">Cost: <%= prods[j].price %></p>
                                    <form action="/product_details" method="POST" >
                                        <button class="btn btn-primary" type="submit" name="id" value="<%=prods[j].id%>">View Listing</button>
                                    </form><br>
                                    <form action="/delete_item" method="POST" >
                                        <button class="btn btn-danger" type="submit" name="id" value="<%=prods[j].id%>" onclick="return confirm('Are you sure you want to delete this item?');">Delete Listing</button>
                                    </form>
                               
                                
                                    
                                        

                                   </div>
                                    
                                </div>
                                    
                                   
                                    
                                </div>
                            <% }} %>



                          

                          </div>
                          <br><br>
                            <% } %>
                    
                    
                    <% } else { %>
                       <div class="alert alert-warning" role="alert"><h3>You currently have <%=prods.length%> items listed in the market!!<h3></div>
                   
                        <% } %>
       
      

</div>

          
           </div>
          </div>
        </div>
</div>
    </div>
</body>




</html>